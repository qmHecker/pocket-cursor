{
  "description": "Auto-accept rules for Cursor tool confirmations. A command is auto-accepted only when it matches an allow pattern AND contains no deny keyword. Deny always wins.",
  "allow": [
    {
      "group": "PocketCursor scripts",
      "patterns": [
        "python *restart_pocket_cursor.py*"
      ]
    },
    {
      "group": "Git (read-only)",
      "patterns": [
        "git status*",
        "git log*",
        "git diff*",
        "git branch*"
      ]
    },
    {
      "group": "Web fetch (read-only)",
      "patterns": ["Fetch http*"]
    },
    {
      "group": "Shell (navigation)",
      "patterns": ["cd *"]
    },
    {
      "group": "Shell (read-only)",
      "patterns": [
        "ls *",
        "dir *",
        "cat *",
        "head *",
        "type *"
      ]
    },
    {
      "group": "Calendar (read-only)",
      "patterns": [
        "python *calendar_client.py* list*",
        "python *calendar_client.py* --week*"
      ]
    },
    {
      "group": "PocketCursor voice",
      "patterns": [
        "python *voice_message.py*"
      ]
    },
    {
      "group": "Email/calendar watcher",
      "patterns": [
        "python *restart_watcher.py*"
      ]
    }
  ],
  "deny": [
    {
      "group": "Destructive operations",
      "patterns": ["rm ", "rmdir", "delete", "remove", "unlink", "drop "]
    },
    {
      "group": "Dangerous flags",
      "patterns": ["--force", "--hard"]
    },
    {
      "group": "System commands",
      "patterns": ["format ", "> /dev/null", "shutdown", "reboot"]
    }
  ]
}
